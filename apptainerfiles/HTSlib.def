Bootstrap: localimage
From: /data/SBBS-BuschLab/containers/Alpine-3.11.3.sif

%labels
    Author Ian Sealy
    Version 1.19.1

%post
    apk --no-cache add libcurl ncurses-libs zlib libbz2 xz-libs
    apk --no-cache add --virtual build-dependencies build-base curl curl-dev ncurses-dev zlib-dev bzip2-dev xz-dev perl bash
    curl -SsOL https://github.com/samtools/htslib/releases/download/1.19.1/htslib-1.19.1.tar.bz2
    tar jxf htslib-1.19.1.tar.bz2
    cd htslib-1.19.1
    ./configure
    make
    make test
    make install
    cd ..
    rm -rf htslib-1.19.1*
    apk del build-dependencies

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

%runscript
    /usr/local/bin/htsfile "$@"

%apprun bgzip
    /usr/local/bin/bgzip "$@"

%apprun tabix
    /usr/local/bin/tabix "$@"

%help
    HTSlib - C library for reading/writing high-throughput sequencing data
