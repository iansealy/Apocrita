Bootstrap: localimage
From: /data/SBBS-BuschLab/containers/Alpine-3.11.3.sif

%labels
    Author Ian Sealy
    Version 1.20

%post
    apk --no-cache add libcurl ncurses-libs zlib libbz2 xz-libs
    apk --no-cache add --virtual build-dependencies build-base curl curl-dev ncurses-dev zlib-dev bzip2-dev xz-dev perl bash
    curl -SsOL https://github.com/samtools/samtools/releases/download/1.20/samtools-1.20.tar.bz2
    tar jxf samtools-1.20.tar.bz2
    cd samtools-1.20
    ./configure
    make
    make test
    make install
    cd ..
    rm -rf samtools-1.20*
    apk del build-dependencies

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

%runscript
    /usr/local/bin/samtools "$@"

%help
    SAMtools - reading/writing/editing/indexing/viewing SAM/BAM/CRAM format
