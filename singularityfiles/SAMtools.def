Bootstrap: library
From: iansealy/alpine/alpine311:3.11.3

%labels
    Author Ian Sealy
    Version 1.15

%post
    apk --no-cache add libcurl ncurses-libs zlib libbz2 xz-libs
    apk --no-cache add --virtual build-dependencies build-base curl curl-dev ncurses-dev zlib-dev bzip2-dev xz-dev perl bash
    curl -SsOL https://github.com/samtools/samtools/releases/download/1.15/samtools-1.15.tar.bz2
    tar jxf samtools-1.15.tar.bz2
    cd samtools-1.15
    ./configure
    make
    make test
    make install
    cd ..
    rm -rf samtools-1.15*
    apk del build-dependencies

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

%runscript
    /usr/local/bin/samtools "$@"

%help
    SAMtools - reading/writing/editing/indexing/viewing SAM/BAM/CRAM format
